#!/bin/sh
VERSION=1.0.0

usage()
{
cat <<EOF
sls

USAGE
sls                List all of your custom scripts.

FLAGS
--help, -h:        Display this help message and exit.
--version, -v:     Display the current version and exit.

EOF
}

case "$1" in
    --help|-h)
        usage
        exit 0
    ;;
    --version|-v)
        printf "%s\n" "$VERSION"
        exit 0
    ;;
    *)
        # Do nothing
        ;;
esac

exa -l "$HOME"/.local/scripts
